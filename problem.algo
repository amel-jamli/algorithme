ALGORITHME problem1
VAR 
    c :CHAR := " " ;
    nb-char , nb-word , nb-vow : INTEGER ;

BEGIN
  nb-char := 0 ;
  nb-word := 0 ;
  nb-vow := 0 ;
  WHILE ( c <> ".") DO
      Read (c) ;
       nb-word := 1 ;
       nb-char += 1 ;
       IF (c= 'e' OR c ='a' OR c ='y' OR c ='u' OR c= 'i' OR c ='o') THEN
         nb-vow += 1 ;

        ELESE IF ( c = ' ')
        nb-word += 1 ;


        END IF

  END WHILE

END 
